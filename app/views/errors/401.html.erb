<div class="error">
  <h1>401 - Unauthorized</h1>
  <% if @message %>
    <%= @message %>
  <% else %>
    You do not have sufficient privileges to view this page.
  <% end %>
  <br/><br/>
  <% unless logged_in? %>
    If you have registered an account, please log in and try again.
  <% end %>
</div>