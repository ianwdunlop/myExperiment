<div id="p_contacts">
<h2>Contacts</h2>

<% if @friends.empty? %>

  <p>Your contacts list is currently empty!</p>
  
<% else %>

  <ul>
  
  <% @friends.each do |id| %>
  
    <li>
      <%= avatar id, "75x75" %><br>
      <%= link_to h(User.find(id).profile.name), 
                  :controller => 'profile', 
                  :action => 'show', 
                  :id => id %>
    </li>
    
  <% end %>
  
  </ul>
  
<% end %>

</div>
