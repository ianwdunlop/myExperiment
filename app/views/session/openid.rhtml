<h2>Please sign in with your OpenID</h2>

<% form_tag session_path do -%>

<p><label for="openid_url">OpenID:</label>
  <%= text_field_tag 'openid_url' %>
</p>

<p><%= check_box_tag 'session[remember_me]' %><label for="remember_me" style="width: 90%;">Remember me on this computer</label></p>

<p class="small"><%= link_to "Login using a normal login", :action => "new" %></p>

<p>
  <%= submit_tag 'Sign in', :disable_with => "Signing in&hellip;" %>
</p>
<% end -%>
