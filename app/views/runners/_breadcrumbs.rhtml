<li><%= link_to 'Runners', runners_path -%></li>

<% if ["show", "new", "edit"].include? controller.action_name.to_s -%>
  <li>&gt;</li>
  
  <% case controller.action_name.to_s; when "show" -%>
    <li><%= h(@runner.title) -%></li>
  <% when "new" -%>
    <li>New Runner</li>
  <% when "edit" -%>
		<li><%= link_to "#{h(@runner.title)}", runner_path(@runner) -%></li>
    <li>&gt;</li>
    <li>Edit</li>
  <% else %>
    <!-- no breadcrumb -->
  <% end -%>
<% end -%>
